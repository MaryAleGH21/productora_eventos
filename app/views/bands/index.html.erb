<p id="notice"><%= notice %></p>

<h1 class= 'text-center'>Bands</h1>
<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Kind</th>
      <th scope="col">Start date</th>
      <th scope="col">Band Concert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.kind %></td>
        <td><%= band.start_date %></td>
        <td><%= band.concerts.count %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

